<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228_f1_v2.UserDetailsController">
    <children>
        <Label alignment="CENTER" text="User Details">
            <font>
                <Font name="Arial Rounded MT Bold" size="24.0" />
            </font>
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin>
        </Label>
        <GridPane alignment="CENTER" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="250.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <font>
                  <Font name="Arial" size="14.0" />
               </font></Label>
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="tfUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <PasswordField fx:id="tfPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>
        <Button fx:id="btnUpdate" onAction="#updateDetails" text="Update Details">
         <VBox.margin>
            <Insets bottom="50.0" top="20.0" />
         </VBox.margin></Button>
        <Button fx:id="btnBack" onAction="#goToDashboard" text="Back" />
    </children>
</VBox>
