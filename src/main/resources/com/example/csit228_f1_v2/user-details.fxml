<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@user.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228_f1_v2.UserDetailsController">
    <children>
        <ImageView fitHeight="400.0" fitWidth="600.0">
            <image>
                <Image url="@user.jpg" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
            <Label alignment="CENTER" text="User Details" textFill="#aeaeae">
                <font>
                    <Font name="Swiss 721 Bold Extended BT" size="36.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="50.0" />
                </VBox.margin>
            </Label>
            <GridPane alignment="CENTER" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="250.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label text="Username:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font name="OCR A Extended" size="18.0" />
                        </font>
                    </Label>
                    <Label text="Password:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1">
                  <font>
                     <Font name="OCR A Extended" size="18.0" />
                  </font></Label>
                    <TextField fx:id="tfUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <PasswordField fx:id="tfPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </children>
            </GridPane>
            <Button fx:id="btnUpdate" onAction="#updateDetails" text="Update Details">
                <VBox.margin>
                    <Insets bottom="50.0" top="20.0" />
                </VBox.margin>
            <font>
               <Font name="OCR A Extended" size="14.0" />
            </font>
            </Button>
            <Button fx:id="btnBack" onAction="#goToDashboard" text="Back">
            <font>
               <Font name="OCR A Extended" size="14.0" />
            </font></Button>
        </VBox>
    </children>
</AnchorPane>
